{
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/notify-stop.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "python3 $HOME/.claude/scripts/context-monitor.py"
  },
  "outputStyle": "Explanatory",
  "alwaysThinkingEnabled": true
}